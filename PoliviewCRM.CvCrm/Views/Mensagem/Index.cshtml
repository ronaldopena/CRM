@{
    ViewData["Title"] = "Mensagem";
    var mensagem = (ViewBag.Mensagem as string) ?? string.Empty;
}

<div class="container py-5" style="min-height: 60vh; display: flex; align-items: center; justify-content: center;">
    <div class="card shadow-sm" style="max-width: 640px; width: 100%; border: none;">
        <div class="card-body text-center p-4">
            <div class="mb-3" style="display:inline-flex; align-items:center; justify-content:center; width:56px; height:56px; border-radius:50%; background-color: var(--ui-card-icon-bgcolor, #FDF0E9);">
                <i class="bi bi-info-circle" style="font-size: 28px; color: var(--ui-card-icon-color, #ED6F23);"></i>
            </div>
            <h5 class="card-title mb-3">Aviso</h5>
            <p class="card-text" style="font-size: 1.05rem;">@mensagem</p>
            <div class="mt-4">
                <button type="button" class="btn ui-btn-ok px-4" onclick="history.back()">OK</button>
            </div>
        </div>
    </div>
</div>