@if (!string.IsNullOrEmpty(mensagemErro))
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/40 p-4" @onclick="FecharAlerta">
        <div class="max-w-md rounded-xl bg-white p-6 shadow-xl" @onclick:stopPropagation="true">
            <div class="flex items-start gap-3">
                <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-red-100">
                    <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">Erro ao entrar</p>
                    <p class="mt-1 text-sm text-gray-600">@mensagemErro</p>
                    <p class="mt-3 text-xs text-gray-500">Este alerta fecha em 10 segundos ou ao clicar fora.</p>
                </div>
                <button type="button" @onclick="FecharAlerta"
                    class="rounded-lg p-1 text-gray-400 hover:bg-gray-100 hover:text-gray-600">
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
}

@implements IDisposable

@code {
    private LoginModel model = new();
    private bool mostrarSenha;
    private bool estaEnviando;
    private string? mensagemErro;

    private CancellationTokenSource? _alertaCts;

    private void MostrarErro(string msg)
    {
        mensagemErro = msg;
        _alertaCts?.Cancel();
        _alertaCts = new CancellationTokenSource();
        var ct = _alertaCts.Token;
        _ = Task.Run(async () =>
        {
            try
            {
                await Task.Delay(10000, ct);
            }
            catch (OperationCanceledException) { return; }
            await InvokeAsync(() =>
    {
            if (mensagemErro == msg)
            {
                mensagemErro = null;
                StateHasChanged();
            }
        });
        });
        StateHasChanged();
    }

    private void FecharAlerta()
    {
        mensagemErro = null;
        _alertaCts?.Cancel();
        StateHasChanged();
    }

    private async Task HandleLogin()
    {
        mensagemErro = null;
        _alertaCts?.Cancel();
        estaEnviando = true;
        try
        {
            var requisicao = new LoginRequisicao
            {
                usuario = model.Email,
                senha = model.Password,
                origem = 1,
                idempresa = 1
            };

            var response = await Http.PostAsJsonAsync("usuario/login", requisicao);

            if (response.IsSuccessStatusCode)
            {
                var loginResposta = await response.Content.ReadFromJsonAsync<LoginResposta>();
                if (loginResposta?.token != null)
                {
                    await AuthTokenService.SetTokenAsync(loginResposta.token);
                    if (AuthStateProvider is CustomAuthStateProvider provider)
                        provider.NotifyAuthenticationStateChanged();
                    NavigationManager.NavigateTo("/parametros/integracao-sieconsp7", forceLoad: true);
                }
                else
                    MostrarErro("Resposta inválida da API.");
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ApiErrorResponse>();
                MostrarErro(error?.Message ?? $"Erro ao entrar. Status: {response.StatusCode}");
            }
        }
        catch (HttpRequestException)
        {
            MostrarErro("Não foi possível conectar à API. Verifique a URL e se o serviço está em execução.");
        }
        catch (Exception)
        {
            MostrarErro("Ocorreu um erro inesperado. Tente novamente.");
        }
        finally
        {
            estaEnviando = false;
        }
    }

    public void Dispose() => _alertaCts?.Cancel();

    private class LoginModel
    {
        [Required(ErrorMessage = "Informe o e-mail")]
        [EmailAddress(ErrorMessage = "E-mail inválido")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Informe a senha")]
        public string Password { get; set; } = "";

        public bool ManterConectado { get; set; }
    }
}
