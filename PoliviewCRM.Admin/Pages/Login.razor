                                    <label for="email" class="mb-1.5 block text-sm font-medium text-gray-700">
                                        E-mail<span class="text-red-500">*</span>
                                    </label>
                                    <InputText id="email" @bind-Value="model.Email" type="email"
                                        placeholder="seu@email.com"
                                        class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-primary-400 focus:outline-none focus:ring-2 focus:ring-primary-500/20" />
                                    <ValidationMessage For="@(() => model.Email)" class="mt-1 text-xs text-red-500" />
                                </div>

