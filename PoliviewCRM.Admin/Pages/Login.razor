@page "/"
@layout AuthLayout
@inject NavigationManager NavigationManager

<PageTitle>Entrar | SIECON CRM</PageTitle>

<div class="relative min-h-screen bg-gray-100 p-4 sm:p-6">
    <div class="relative flex min-h-screen w-full flex-col items-center justify-center">
        <div class="w-full max-w-md">
            <div class="mb-4">
                <NavLink href="/parametros/integracao-sieconsp7" class="inline-flex items-center text-sm text-gray-500 transition-colors hover:text-gray-700">
                    <svg class="stroke-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M12.7083 5L7.5 10.2083L12.7083 15.4167" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Voltar ao painel
                </NavLink>
            </div>
            <!-- Card de login em destaque -->
            <div class="rounded-2xl border border-gray-200 bg-white px-6 py-8 shadow-lg sm:px-8 sm:py-10">
                <div>
                    <div class="mb-5 sm:mb-8">
                        <h1 class="mb-2 text-2xl font-semibold text-gray-800 sm:text-3xl">
                            Entrar
                        </h1>
                        <p class="text-sm text-gray-500">
                            Digite seu e-mail e senha para entrar!
                        </p>
                    </div>

                    <div>
                        <!-- Botões sociais -->
                        <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 sm:gap-5">
                            <button type="button" class="inline-flex items-center justify-center gap-3 rounded-lg bg-gray-100 px-7 py-3 text-sm font-normal text-gray-700 transition-colors hover:bg-gray-200 hover:text-gray-800">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18.7511 10.1944C18.7511 9.47495 18.6915 8.94995 18.5626 8.40552H10.1797V11.6527H15.1003C15.0011 12.4597 14.4654 13.675 13.2749 14.4916L13.2582 14.6003L15.9087 16.6126L16.0924 16.6305C17.7788 15.1041 18.7511 12.8583 18.7511 10.1944Z" fill="#4285F4" />
                                    <path d="M10.1788 18.75C12.5895 18.75 14.6133 17.9722 16.0915 16.6305L13.274 14.4916C12.5201 15.0068 11.5081 15.3666 10.1788 15.3666C7.81773 15.3666 5.81379 13.8402 5.09944 11.7305L4.99473 11.7392L2.23868 13.8295L2.20264 13.9277C3.67087 16.786 6.68674 18.75 10.1788 18.75Z" fill="#34A853" />
                                    <path d="M5.10014 11.7305C4.91165 11.186 4.80257 10.6027 4.80257 9.99992C4.80257 9.3971 4.91165 8.81379 5.09022 8.26935L5.08523 8.1534L2.29464 6.02954L2.20333 6.0721C1.5982 7.25823 1.25098 8.5902 1.25098 9.99992C1.25098 11.4096 1.5982 12.7415 2.20333 13.9277L5.10014 11.7305Z" fill="#FBBC05" />
                                    <path d="M10.1789 4.63331C11.8554 4.63331 12.9864 5.34303 13.6312 5.93612L16.1511 3.525C14.6035 2.11528 12.5895 1.25 10.1789 1.25C6.68676 1.25 3.67088 3.21387 2.20264 6.07218L5.08953 8.26943C5.81381 6.15972 7.81776 4.63331 10.1789 4.63331Z" fill="#EB4335" />
                                </svg>
                                Entrar com Google
                            </button>
                            <button type="button" class="inline-flex items-center justify-center gap-3 rounded-lg bg-gray-100 px-7 py-3 text-sm font-normal text-gray-700 transition-colors hover:bg-gray-200 hover:text-gray-800">
                                <svg width="21" height="20" class="fill-current" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M15.6705 1.875H18.4272L12.4047 8.75833L19.4897 18.125H13.9422L9.59717 12.4442L4.62554 18.125H1.86721L8.30887 10.7625L1.51221 1.875H7.20054L11.128 7.0675L15.6705 1.875ZM14.703 16.475H16.2305L6.37054 3.43833H4.73137L14.703 16.475Z" fill="currentColor" />
                                </svg>
                                Entrar com X
                            </button>
                        </div>

                        <!-- Divisor -->
                        <div class="relative py-3 sm:py-5">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-200"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="bg-white px-5 py-2 text-gray-400">Ou</span>
                            </div>
                        </div>

                        <EditForm Model="@model" OnValidSubmit="HandleLogin">
                            <DataAnnotationsValidator />
                            <div class="space-y-5">
                                <div>
                                    <label for="email" class="mb-1.5 block text-sm font-medium text-gray-700">
                                        E-mail<span class="text-red-500">*</span>
                                    </label>
                                    <InputText id="email" @bind-Value="model.Email" type="email" placeholder="seu@email.com"
                                        class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500/20" />
                                    <ValidationMessage For="@(() => model.Email)" class="mt-1 text-xs text-red-500" />
                                </div>

                                <div>
                                    <label for="password" class="mb-1.5 block text-sm font-medium text-gray-700">
                                        Senha<span class="text-red-500">*</span>
                                    </label>
                                    <div class="relative">
                                        <InputText id="password" @bind-Value="model.Password" type="@(mostrarSenha ? "text" : "password")" placeholder="Digite sua senha"
                                            class="h-11 w-full rounded-lg border border-gray-300 bg-transparent py-2.5 pl-4 pr-11 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500/20" />
                                        <button type="button" @onclick="(() => mostrarSenha = !mostrarSenha)" class="absolute right-4 top-1/2 z-30 -translate-y-1/2 cursor-pointer text-gray-500 hover:text-gray-700">
                                            @if (mostrarSenha)
                                            {
                                                <svg class="h-5 w-5 fill-current" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M4.63803 3.57709C4.34513 3.2842 3.87026 3.2842 3.57737 3.57709C3.28447 3.86999 3.28447 4.34486 3.57737 4.63775L4.85323 5.91362C3.74609 6.84199 2.89363 8.06395 2.4155 9.45936C2.3615 9.61694 2.3615 9.78801 2.41549 9.94558C3.49488 13.0957 6.48191 15.3619 10.0002 15.3619C11.255 15.3619 12.4422 15.0737 13.4994 14.5598L15.3625 16.4229C15.6554 16.7158 16.1302 16.7158 16.4231 16.4229C16.716 16.13 16.716 15.6551 16.4231 15.3622L4.63803 3.57709ZM12.3608 13.4212L10.4475 11.5079C10.3061 11.5423 10.1584 11.5606 10.0064 11.5606H9.99151C8.96527 11.5606 8.13333 10.7286 8.13333 9.70237C8.13333 9.5461 8.15262 9.39434 8.18895 9.24933L5.91885 6.97923C5.03505 7.69015 4.34057 8.62704 3.92328 9.70247C4.86803 12.1373 7.23361 13.8619 10.0002 13.8619C10.8326 13.8619 11.6287 13.7058 12.3608 13.4212ZM16.0771 9.70249C15.7843 10.4569 15.3552 11.1432 14.8199 11.7311L15.8813 12.7925C16.6329 11.9813 17.2187 11.0143 17.5849 9.94561C17.6389 9.78803 17.6389 9.61696 17.5849 9.45938C16.5055 6.30925 13.5184 4.04303 10.0002 4.04303C9.13525 4.04303 8.30244 4.17999 7.52218 4.43338L8.75139 5.66259C9.1556 5.58413 9.57311 5.54303 10.0002 5.54303C12.7667 5.54303 15.1323 7.26768 16.0771 9.70249Z" fill="#98A2B3" />
                                                </svg>
                                            }
                                            else
                                            {
                                                <svg class="h-5 w-5 fill-current" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M10.0002 13.8619C7.23361 13.8619 4.86803 12.1372 3.92328 9.70241C4.86804 7.26761 7.23361 5.54297 10.0002 5.54297C12.7667 5.54297 15.1323 7.26762 16.0771 9.70243C15.1323 12.1372 12.7667 13.8619 10.0002 13.8619ZM10.0002 4.04297C6.48191 4.04297 3.49489 6.30917 2.4155 9.4593C2.3615 9.61687 2.3615 9.78794 2.41549 9.94552C3.49488 13.0957 6.48191 15.3619 10.0002 15.3619C13.5184 15.3619 16.5055 13.0957 17.5849 9.94555C17.6389 9.78797 17.6389 9.6169 17.5849 9.45932C16.5055 6.30919 13.5184 4.04297 10.0002 4.04297ZM9.99151 7.84413C8.96527 7.84413 8.13333 8.67606 8.13333 9.70231C8.13333 10.7286 8.96527 11.5605 9.99151 11.5605H10.0064C11.0326 11.5605 11.8646 10.7286 11.8646 9.70231C11.8646 8.67606 11.0326 7.84413 10.0064 7.84413H9.99151Z" fill="#98A2B3" />
                                                </svg>
                                            }
                                        </button>
                                    </div>
                                    <ValidationMessage For="@(() => model.Password)" class="mt-1 text-xs text-red-500" />
                                </div>

                                <div class="flex items-center justify-between">
                                    <label class="flex cursor-pointer select-none items-center text-sm font-normal text-gray-700">
                                        <input type="checkbox" @bind="model.ManterConectado" class="mr-3 h-5 w-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                                        Manter-me conectado
                                    </label>
                                    <NavLink href="/recuperar-senha" class="text-sm text-blue-600 hover:text-blue-700">
                                        Esqueceu a senha?
                                    </NavLink>
                                </div>

                                <div>
                                    <button type="submit" disabled="@estaEnviando"
                                        class="flex w-full items-center justify-center rounded-lg bg-blue-600 px-4 py-3 text-sm font-medium text-white shadow-sm transition hover:bg-blue-700 disabled:opacity-50">
                                        @if (estaEnviando)
                                        {
                                            <span>Entrando...</span>
                                        }
                                        else
                                        {
                                            <span>Entrar</span>
                                        }
                                    </button>
                                </div>
                            </div>
                        </EditForm>

                        <div class="mt-5">
                            <p class="text-center text-sm font-normal text-gray-700">
                                Não tem uma conta?
                                <NavLink href="/cadastro" class="text-blue-600 hover:text-blue-700">Cadastrar</NavLink>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel model = new();
    private bool mostrarSenha;
    private bool estaEnviando;

    private async Task HandleLogin()
    {
        estaEnviando = true;
        try
        {
            // Simula validação; em produção chamaria API de autenticação
            await Task.Delay(500);
            NavigationManager.NavigateTo("/parametros/integracao-sieconsp7", forceLoad: true);
        }
        finally
        {
            estaEnviando = false;
        }
    }

    private class LoginModel
    {
        [Required(ErrorMessage = "Informe o e-mail")]
        [EmailAddress(ErrorMessage = "E-mail inválido")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Informe a senha")]
        public string Password { get; set; } = "";

        public bool ManterConectado { get; set; }
    }
}
